<!DOCTYPE html>
<html class="no-js">
    <head>
        <title>
            {% spaceless %}
                {% if content is defined %}
                    {{ ez_content_name(content) ~ ' - ' }}
                {% endif %}
                eZ Platform
            {% endspaceless %}
        </title>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" type="image/x-icon">

        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css">
        <link rel="stylesheet" href="//fonts.googleapis.com/css?family=Open+Sans+Condensed:300,700|Open+Sans:400,600">

        {% block head_styles %}
            {% stylesheets filter='cssrewrite' '@css_default' %}
                <link rel="stylesheet" type="text/css" href="{{ asset_url }}">
            {% endstylesheets %}
        {% endblock %}

        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
        <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

        {% block head_scripts %}
        {% endblock %}

        {% block head_tracking %}
            {% include '@ezdesign/layout/tracking_head.html.twig' only %}
        {% endblock %}

        {% block canonical %}
        {% endblock %}
    </head>
    <body>
        {% block main %}
            <main>
        {% endblock %}

            {% block header %}
                {% include '@ezdesign/layout/header.html.twig' only %}
            {% endblock %}

            {% block content %}
            {% endblock %}

            {% block footer %}
                {{ render(controller('AppBundle:Layout:showPart', {
                      'template': '@ezdesign/layout/footer.html.twig'
                })) }}
            {% endblock %}
            {% include '@ezdesign/layout/scripts.html.twig' only %}
        </main>
    </body>
</html>
