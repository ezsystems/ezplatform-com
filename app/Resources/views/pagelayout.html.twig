<!DOCTYPE html>

<html lang="en-US"
      class="no-js">

    <head>

        {% if content is defined and title is not defined %}
            {% set title = ez_content_name(content) %}
        {% endif %}

        <title>{{ title|default('Home')|trans }} - {{ 'eZ Platform' }}</title>

        <meta http-equiv="Content-Type"
              content="text/html; charset=utf-8" />

        <meta http-equiv="X-UA-Compatible"
              content="IE=edge,chrome=1" />

        <meta name="viewport"
              content="width=device-width, initial-scale=1.0" />

        <link rel="Shortcut icon" href="favicon.ico" type="image/x-icon" />

        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css">

        {% stylesheets filter='cssrewrite'
            'assets/css/ezplatform-com.css'
            'assets/css/responsive.css'
            'assets/css/slider.css'
            'assets/css/download.css'
        %}
        <link rel="stylesheet" type="text/css" href="{{ asset_url }}"/>
        {% endstylesheets %}

        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
        <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

        {% block head_tracking %}
            {% include 'pagelayout_tracking_head.html.twig' %}
        {% endblock %}
    </head>

    <body>

        <div id="uberdiv">

            {% block header %}
                {% include 'pagelayout_header.html.twig' %}
            {% endblock %}

            {% block content %}{% endblock %}

            {% block footer %}
                {{  render( controller( "AppBundle:Layout:showPart", { 'template': 'pagelayout_footer.html.twig' } )) }}
            {% endblock %}

        </div><!-- End of div #uberdiv -->

    </body>

</html>
